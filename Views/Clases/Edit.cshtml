@model TrabajoFinal.Dtos.ClaseDto

@{
    ViewData["Title"] = "Editar clase";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre:</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Profesor" class="control-label">Profesor:</label>
        <input asp-for="Profesor" class="form-control" />
        <span asp-validation-for="Profesor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fecha" class="control-label">Fecha:</label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
